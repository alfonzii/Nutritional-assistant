<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.cuni.mff.nutritionalassistant.activity.overview.RecipeOverviewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/text_recipe_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Meal recipe"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/thumbnail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/thumbnail" />

                <TextView
                    android:id="@+id/text_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Quantity:"
                    app:layout_constraintStart_toStartOf="@+id/text_recipe_name"
                    app:layout_constraintTop_toBottomOf="@+id/thumbnail" />

                <EditText
                    android:id="@+id/number_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:ems="2"
                    android:hint="1"
                    android:inputType="number"
                    android:textAlignment="textStart"
                    app:layout_constraintStart_toEndOf="@+id/text_quantity"
                    app:layout_constraintTop_toBottomOf="@+id/thumbnail" />

                <TextView
                    android:id="@+id/text_weight_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x portion"
                    app:layout_constraintBottom_toBottomOf="@+id/text_quantity"
                    app:layout_constraintStart_toEndOf="@+id/number_quantity"
                    app:layout_constraintTop_toTopOf="@+id/text_quantity"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/text_meal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Meal:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_quantity" />

                <Spinner
                    android:id="@+id/spinner_meal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/meals"
                    app:layout_constraintBottom_toBottomOf="@+id/text_meal"
                    app:layout_constraintStart_toStartOf="@+id/number_quantity" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="48dp"
                    android:text="Calories"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_fats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="36dp"
                    android:text="@string/fats_en"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_calories" />

                <TextView
                    android:id="@+id/text_carbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="36dp"
                    android:text="@string/carbohydrates_en"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_fats" />

                <TextView
                    android:id="@+id/text_proteins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="36dp"
                    android:text="@string/proteins_en"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_carbs" />

                <TextView
                    android:id="@+id/text_calories_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@+id/text_calories"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/text_fats_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@+id/text_fats"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/text_carbs_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@+id/text_carbs"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/text_proteins_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@+id/text_proteins"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:id="@+id/LinearLayout_ingredients"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Ingredients:"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="ingredient 1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ingredient 2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ingredient 3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ingredient 4" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout_instructions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:divider="@drawable/empty_tall_divider"
                android:orientation="vertical"
                android:showDividers="middle">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Instructions:"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec tincidunt magna quis dolor auctor, eu accumsan nisl porttitor. Fusce non leo in urna maximus ornare ut quis risus. Suspendisse potenti. Nulla bibendum euismod tortor, et faucibus elit pharetra sed. In diam turpis, semper nec diam quis, placerat egestas sem. Nullam mattis ante ac scelerisque sodales. Sed venenatis nisi ac rutrum tincidunt. Nullam ut lorem diam. Donec at mollis lectus. " />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Praesent pulvinar suscipit neque sed tristique. Morbi vel diam laoreet, consectetur enim non, sollicitudin metus. Aenean elit arcu, iaculis ut arcu ut, blandit laoreet quam. Integer sed pretium tellus. Nam eu sapien est. Praesent id orci interdum, tristique nibh ut, tempor massa. Nam hendrerit nisl ligula, hendrerit porta sapien dignissim pellentesque. Aenean ut porta magna. " />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Sed id metus vel ipsum vehicula posuere ac vel erat. Integer dignissim dignissim lorem vehicula accumsan. In condimentum, metus non scelerisque molestie, velit ligula volutpat quam, in convallis orci nulla et arcu. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin facilisis posuere enim, ut vulputate dui sagittis a. Vivamus consectetur feugiat enim, ut tempor urna faucibus eu. Aliquam eu neque vitae nisi eleifend vehicula. Curabitur vitae eleifend nunc. " />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Quisque ullamcorper mi vel sapien mattis finibus vitae sit amet libero. Vestibulum nisl diam, rhoncus hendrerit nisl non, condimentum malesuada ligula. Maecenas a placerat nisi. Mauris id neque sollicitudin, ultrices enim a, maximus mauris. Quisque metus neque, luctus eget posuere vel, ullamcorper et mi. Morbi venenatis pharetra nisi. Cras suscipit pulvinar lectus nec accumsan. Maecenas velit risus, facilisis quis viverra vel, sodales eget velit. Suspendisse potenti. Donec maximus, lorem vel ullamcorper sodales, velit lacus placerat justo, vel fermentum enim ante vitae nibh. Phasellus congue pellentesque libero quis faucibus. Quisque facilisis nunc id nunc ornare, eu accumsan massa vestibulum. " />

            </LinearLayout>

            <Button
                android:id="@+id/button_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="Add"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>